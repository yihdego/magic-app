<div class="login-page">
  <div class="form">
    <form class="new-user" action="/users" method="post">
        <input type="text" name="user[name]" placeholder="name">
        <input type="string" name="user[email]" placeholder="email address">
        <input type="password" name="password" placeholder="password">
        <button>Sign Up</button>
    </form>
  </div>
</div>

<div class="error">
  <% if @error %>
    <p> <%= @error %></p>
  <% end %>
</div>
